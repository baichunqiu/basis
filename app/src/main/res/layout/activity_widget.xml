<?xml version="1.0" encoding="utf-8"?>
<com.basis.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.basis.widget.TitleBar
        android:id="@+id/bsi_v_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="UI" />

    <com.basis.widget.SearchLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_basis_bg" />

    <com.basis.widget.SwitchButton
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

</com.basis.percent.PercentLinearLayout>