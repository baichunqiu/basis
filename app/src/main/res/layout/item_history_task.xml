<?xml version="1.0" encoding="utf-8"?>
<com.basis.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.basis.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="20%w"
        android:layout_marginLeft="@dimen/dimens_40px"
        android:layout_marginTop="@dimen/dimens_20px"
        android:layout_marginRight="@dimen/dimens_40px"
        android:layout_marginBottom="@dimen/dimens_20px"
        android:background="@drawable/shape_gray_solid"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task"
                style="@style/main_text_black_15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens_20px"
                android:text="机械检测" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/main_text_gray_12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens_20px"
                android:text="2020-04-22 17:34:55"
                app:layout_heightPercent="15%w" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            style="@style/main_text_blue_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已上传"
            app:layout_widthPercent="18%w" />
    </com.basis.percent.PercentLinearLayout>
</com.basis.percent.PercentLinearLayout>

